                <div class="row">
                    <div class="col-lg-12">
                        <h1>Homework for this week</h1>
                        <p>Upcoming Events to put on your calender</p>
                    </div>
                </div>
                {{!-- Messaging Portion --}}
                <div class="row">
                    <div class="col-lg-12">
						<form>
						  <div class="form-group">
						    <label for="formGroupExampleInput">Post your questions or concerns</label>
						    <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Post away :)">
						  
  						
						  </div>
						</form> 
<button class="btn btn-default" id="makePost">Post a Comment</button>

				    </div>
                </div> 

                {{!-- Receive Posts --}}
                <div class="row">
                    <div class="col-lg-12">
					



                    </div>
                </div>

            </div>
        </div>
