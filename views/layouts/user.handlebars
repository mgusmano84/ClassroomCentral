        </div> 

         <div id="wrapper">

         <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <div id="userin">
                        Welcome {{username}}
                    </div>
                </li>
				{{#if isTeacher}}
