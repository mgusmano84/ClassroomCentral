{{!-- Main Content --}}
        <div class="reusable-padding imgmain">
            <div class="container-fluid">
                <!-- Teacher Content relating to homework and Upcoming Events -->
                <div class="row">
                    <div class="col-lg-12">
                    <h1 id="homeworkstyle">Homework for the Week <span class="glyphicon glyphicon-chevron-down"></span></h1>
                        <ul class="list-group groupchange">
                        {{#each homework}}
                        <li class="list-group-item homeout"><span class="glyphicon glyphicon-lamp"></span> {{text}}</li>
                        <br>
                        {{/each}}
                        </ul>
                    <h1 id="homeworkstyle">Upcoming Events <span class="glyphicon glyphicon-chevron-down sss"></span></h1>
                        <ul class="list-group groupchange">
                        {{#each events}}
                        <li class="list-group-item eventout"><span class="glyphicon glyphicon-blackboard"></span> {{text}}</li>
                        <br>
                        {{/each}}
                        </ul>
                    </div>
                </div>
                {{!-- Messaging Portion --}}
                <div class="row">
                    <div class="col-lg-12">
						<form>
						  <div class="form-group">
						    <label for="formGroupExampleInput" id="postlabel">Post your Questions or Concerns <span class="glyphicon glyphicon-chevron-down"></span></label>

                            

						  </div>
                            <button class="btn btn-success" id="makePost">Post a Comment</button>
						</form> 
                <br>

				    </div>
                </div> 

                {{!-- Receive Posts --}}
                <div class="row">
                    <div class="col-lg-12">
					          <table id="postTable">
                    {{#each posts}}
                    <tr class="tr">
                    <td class="td2">Post From: {{usernameP}}</td>
                    <td class="td2">{{text}} <button class="dPost" data-id={{msg_id}}>Delete</button></td>
                    </tr>
                    {{/each}}
                    </table>


                    </div>
                </div>

            </div>
        </div>
        <!-- /#page-content-wrapper -->

        </div>


        {{!-- User Post Modal --}}
        	<div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" id="postModal">
		<div class="modal-dialog modal-sm">
    		<div class="modal-content">
    			<div class="modal-header">
      				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      				<h1 class="modal-title">Classroom Central</h1>
      			</div>
      			<div class="modal-body">
        			<form id="postForm">
  						<div class="form-group">
    						<label for="search">Please share your thoughts with the class</label>
    						<input type="text" class="form-control" id="postMain" placeholder="">
 						</div>
  						<button class="btn btn-default" id="postSubmit">Submit</button>

					</form>
      			</div>
			</div>
  		</div>
	</div>


